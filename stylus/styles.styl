@import './_reset-styles.styl'
@import './_tokens.styl'

html
	font-family ffPrimary
	background-color red
	color white
	background-image url('../images/bg-intro-mobile.png')
	background-repeat no-repeat
	background-position-x center

main
	padding 0 20px

a
	color red
	text-decoration none
	font-weight fwSemiBold

.description
	text-align center
	margin 80px auto
	max-width 360px
	&__text
		max-width 360px

.form
	max-width 400px
	margin 0 auto
	&__offer
		background-color blue
		padding 1px 30px
		text-align center
		border-radius 20px
		margin-bottom 30px
		p
			max-width 240px
			margin 10px auto
	&__inputs
		display flex
		flex-direction column
		padding 40px 20px
		background-color white
		border-radius 20px
		color grayishBlue
		&__item
			height 50px
			font-weight fwBold
			padding-left 10px
			border 1px solid grayishBlue
			margin-bottom 15px
		&__button
			height 50px
			font-weight fwBold
			text-transform uppercase
			background-color green
			color white
			border none
			font-size 1.6rem
		&__terms
			text-align center
			font-size 1.4rem

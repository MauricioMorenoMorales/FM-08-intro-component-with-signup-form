@import './_reset-styles.styl'
@import './_tokens.styl'

html
	font-family ffPrimary
	background-color red
	color white
	background-image url('../images/bg-intro-mobile.png')
	background-repeat no-repeat
	background-position-x center

main
	padding 0 20px

a
	color red
	text-decoration none
	font-weight fwSemiBold

.description
	text-align center
	margin 80px auto
	max-width 360px
	&__text
		max-width 360px

.form
	max-width 400px
	margin 0 auto
	&__offer
		background-color blue
		padding 1px 30px
		text-align center
		border-radius 10px
		margin-bottom 30px
		box-shadow shadow
		p
			max-width 240px
			margin 10px auto
	&__inputs
		display flex
		flex-direction column
		padding 40px 20px
		background-color white
		border-radius 10px
		color grayishBlue
		box-shadow shadow
		margin-bottom 100px
		&__item
			height 50px
			font-weight fwBold
			padding-left 10px
			border 1px solid grayishBlue
			margin-top 15px
		&__button
			height 50px
			font-weight fwBold
			text-transform uppercase
			background-color green
			color white
			border none
			font-size 1.6rem
			box-shadow buttonShadow
			margin-top 15px
		&__terms
			text-align center
			font-size 1.3rem
		&__error
			margin 0
			text-align end
			font-size 1.3rem
			color red
			display none
			&.active
				display block

@media screen and (min-width 800px)
	html
		background-image url('../images/bg-intro-desktop.png')
		background-repeat repeat
	main
		display flex
		align-items center
		justify-content center
		padding 0 5%

	.description
		text-align start
		width 80%
		margin-right 30px
		margin-left 0
		max-width 700px
		&__title
			font-size 5rem
			max-width 500px
		p
			max-width 800px

	.form
		margin-top 100px
		width 60%
		max-width 600px
		margin-right 0
		&__offer p
			max-width 400px